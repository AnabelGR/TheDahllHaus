<link href="https://fonts.googleapis.com/css?family=Amatic+SC|Satisfy|Archivo+Narrow" rel="stylesheet">

@{
    ViewData["Title"] = "The Dahll Haus Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<TheDahllHaus.Models.Item>

<div class="mui-container-fluid">
    <h1 class="headingText" align="center">Welcome to the Shop!</h1>
    <div class="mui-divider"></div>
    <br />
    <div class="mui-container-fluid">
       <div class="mui-row">


            @foreach (var listItem in Model)
            {
                <div class="col-md-3">

                    @*<div><img src="@Url.Content(listItem.Image)" width="200"></div>*@

                        <h3 style="font-family: 'Satisfy', cursive;"> @Html.DisplayFor(modelItem => listItem.Name)</h3>
                        <p>@Html.DisplayFor(modelItem => listItem.Description)</p>
                        <p><strong>@Html.DisplayFor(modelItem => listItem.Price)</strong></p>
                        <button align="center" class="mui-btn mui-btn--dark mui-btn--small">BUY</button>

                </div>
            }
        </div>
    </div>
</div>