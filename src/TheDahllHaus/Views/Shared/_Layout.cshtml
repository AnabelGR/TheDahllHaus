<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="//cdn.muicss.com/mui-0.9.24/css/mui.min.css" rel="stylesheet" type="text/css" />
    <script src="//cdn.muicss.com/mui-0.9.24/js/mui.min.js"></script>
    <script src="//code.jquery.com/jquery-2.1.4.min.js"></script>

    <!--local and non MUI CDNs-->
    <link href="https://fonts.googleapis.com/css?family=PT+Sans" rel="stylesheet">
    <link href="~/css/main.css" rel="stylesheet" />
    <script src="~/js/scripts.js"></script>
    <script src="https://use.fontawesome.com/c3a95916f1.js"></script>
    <title>@ViewBag.Title</title>
</head>

<body>
    <div id="sidedrawer">
        <div id="sidedrawer-brand" class="parentLink">
            <h3>The Dahll Haus</h3>
        </div>
        <div class="mui-divider"></div>
        <ul>
            <li>
                <strong>ABOUT THE DAHLL HAUS</strong>
                <ul>
                    <li class="list-group-item">@Html.ActionLink("Meet the Artist", "About", "Home")</li>
                    <li class="list-group-item">@Html.ActionLink("Ask for a quote", "Contact", "Home")</li>
                    <li class="list-group-item">@Html.ActionLink("Dahll Haus Love Notes", "Reviews", "Home")</li>
                </ul>
            </li>
            <li>
                <strong>DAHLL HAUS SHOP</strong>
                <ul>
                    <li class="list-group-item">@Html.ActionLink("Headdresses", "Headdresses", "Items")</li>
                    <li class="list-group-item">@Html.ActionLink("Masks", "Masks", "Items")</li>
                    <li class="list-group-item">@Html.ActionLink("Zines", "Zines", "Items")</li>
                    <li class="list-group-item">@Html.ActionLink("Hats and Fascinators", "Hats and Fascinators", "Items")</li>
                    <li class="list-group-item">@Html.ActionLink("Costumes", "Costumes", "Items")</li>
                    <li class="list-group-item">@Html.ActionLink("Wigs", "Wigs", "Items")</li>
                    <li class="list-group-item">@Html.ActionLink("Repairs and Alterations", "Repairs", "Repairs")</li>
                </ul>
            </li>
            <li>
                <strong>MUA AND ASSISTANT WORK PORTFOLIO</strong>
                <ul>
                    <li class="list-group-item">@Html.ActionLink("Hair", "Hairstylist", "MUA")</li>
                    <li class="list-group-item">@Html.ActionLink("MUA", "Makeup", "MUA")</li>
                    <li class="list-group-item">@Html.ActionLink("Assistant Work", "Assistant", "MUA")</li>
                </ul>
          </li>
        </ul>
    </div>
    <header id="header">
        <div class="mui-appbar mui--appbar-line-height">
            <div class="mui-container-fluid">
                <a class="sidedrawer-toggle mui--visible-xs-inline-block mui--visible-sm-inline-block js-show-sidedrawer">☰</a>
                <a class="sidedrawer-toggle mui--hidden-xs mui--hidden-sm js-hide-sidedrawer">☰</a>
                <span class="mui--text-title">Welcome to the Dahll Haus.</span>
            </div>
        </div>
    </header>
    <div id="content-wrapper">
        <div class="mui-container-fluid">
            @RenderBody()
        </div>
    </div>
    <footer id="footer">
        <div class="mui-container-fluid">
            <br>
            <p>The Dahll Haus <i class="fa fa-copyright fa-fw" aria-hidden="true"></i>2017   | Made with ♥ by <a href="https://www.muicss.com">MUI</a> |   @Html.ActionLink("HOME", "Index", "Home")</p>
        </div>
    </footer>
</body>
</html>