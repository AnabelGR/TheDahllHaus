@{
    ViewData["Title"] = "Inquiries";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mui-container-fluid">
    <h1 class="headingText" align="center">Inquiries, Quotes, Notes?</h1>
    <div class="mui-divider"></div>
    <br />
    <br />
    <div align="center">
            <p>Contact KJ to discuss your needs for hair & makeup for special events, stage performances & modeling work.</p><p>She is also a craftswoman skilled in costume repair and alterations, custom head adornments and headdresses.</p>
            <p>Leave a detailed message please.</p>
        </div>
    <div class="mui-panel">
        <form class="mui-form">
            <div class="mui-textfield mui-textfield--float-label">
                <input type="text">
                <label>Name</label>
            </div>
            <div class="mui-textfield mui-textfield--float-label">
                <input type="text">
                <label>Email</label>
            </div>
            <div class="mui-textfield mui-textfield--float-label">
                <input type="datetime">
                <label>Needed By</label>
            </div>
            <div class="mui-textfield mui-textfield--float-label">
                <textarea></textarea>
                <label>Request Description</label>
            </div>
            <button type="submit" class="mui-btn mui-btn--raised">Submit</button>
        </form>
    </div>
</div>